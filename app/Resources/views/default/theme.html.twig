{% extends 'base.html.twig' %}

{% block body %}

    <ol class="breadcrumb">
        <li>
            <a href="{{ path('homepage') }}">Liste des th√®mes</a>
        </li>
    </ol>

    {% if theme is defined %}
        <h1>{{ theme.name }}</h1>
    {% elseif title is defined %}
        <h1>{{ title }}</h1>
    {% endif %}

    <table class="table">
        <tbody>
        {% for post in postList %}
            <tr>
                <td>
                    <a href="{{ path('post_details', {'slug': post.slug}) }}">
                        {{ post.title }}
                    </a>
                </td>
                <td>{{ post.answers| length}} reponses</td>
                <td>
                    {% if is_granted('ROLE_AUTHOR') %}
                    {% if app.user.id == post.author. id %}
                    <a href="{{ path('post_edit', {'id' : post.id}) }}" class="btn btn-success btn-xs">
                        Modifier
                    </a>
                    {% endif %}
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

